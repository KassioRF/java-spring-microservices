# Reference environment variables for ticket-sales-services
# For development and production use local .env file
# Copy this file to .env and fill in the values before running the services
# NEVER commit your .env file with real values to version control

# Environment (development or production)
ENVIRONMENT="development"

#=========================
# DATABASE ENVIRONMENTS

# DBMS Creds
DB_HOST="pg-dbms"
DB_PORT="5432"
DB_ADMIN_USER="pg-master"
DB_ADMIN_PASSWORD="changeit"

# Users DB
DB_USERS="tickets-users"
DB_USERS_OWNER="pg-tickets-users"
DB_USERS_PASSWORD="changeit"

# Sales DB
DB_SALES="tickets-sales"
DB_SALES_OWNER="pg-tickets-sales"
DB_SALES_PASSWORD="changeit"

# Notifications DB
DB_NOTIFICATIONS="tickets-notifications"
DB_NOTIFICATIONS_OWNER="pg-tickets-notifications"
DB_NOTIFICATIONS_PASSWORD="changeit"
